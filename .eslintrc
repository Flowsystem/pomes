{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jasmine": true,
    "jest": true
  },
  "plugins": [
    "react",
    "flowtype"
  ],
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": ["src", "node_modules"],
            "extensions": [".js", ".jsx"]
          }
        }
      }
    }
  }
}
